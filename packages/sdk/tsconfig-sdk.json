{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "DOM"],
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": false,
    "outDir": "./dist/esm",
    "declaration": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["./src"],
  "exclude": ["./typechain"]
}
