{
  "name": "@ionicprotocol/sdk",
  "repository": "git://github.com:ionicprotocol/monorepo.git",
  "version": "0.0.6",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "description": "",
  "main": "./dist/cjs/src/index.js",
  "module": "./dist/esm/src/index.js",
  "types": "./dist/cjs/src/index.d.ts",
  "files": [
    "/dist/"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "yarn run build:sdk",
    "postbuild": "du -sk dist/cjs; du -sk dist/esm",
    "clean": "rm -rf dist;",
    "build:sdk": "echo '> Compiling SDK...'; yarn run build:esm && yarn run build:cjs",
    "build:esm": "echo '> Compiling ESM SDK Module...'; tsc -p tsconfig-sdk.json",
    "build:cjs": "echo '> Compiling CJS SDK Module...'; tsc -p tsconfig-cjs.json",
    "test:mocha": "nyc ts-mocha --require 'tests-mocha/globalTestHook.ts' --check-leaks --exit --timeout 60000 'tests-mocha/**/*.spec.ts'",
    "prettier:ts": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "lint": "eslint . -c .eslintrc.json --ext ts,json",
    "lint-fix": "eslint . -c .eslintrc.json --fix --ext ts,json",
    "test:integration": "ts-node tests-integration/index.ts",
    "test:foo": "ts-node tests-integration/foo.ts"
  },
  "keywords": [],
  "author": "Ionic Protocol",
  "license": "ISC",
  "devDependencies": {
    "@types/bad-words": "^3.0.1",
    "@types/chai": "^4.3.6",
    "@types/chai-as-promised": "^7",
    "@types/chai-subset": "^1",
    "@types/eslint": "^8.44.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.9",
    "@types/sinon-chai": "^3",
    "chai": "^4",
    "chai-as-promised": "^7",
    "chai-subset": "^1.6.0",
    "dotenv": "^16.4.5",
    "eslint": "^8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "lint-staged": "15.2.7",
    "mocha": "^10.5.2",
    "nyc": "^17.0.0",
    "prettier": "3.3.2",
    "sinon": "^18.0.0",
    "sinon-chai": "^3.7.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@ionicprotocol/chains": "workspace:*",
    "@ionicprotocol/types": "workspace:*",
    "@supabase/supabase-js": "^2.44.1",
    "bad-words": "^3.0.4",
    "bufferutil": "^4.0.8",
    "perf_hooks": "^0.0.1",
    "utf-8-validate": "^6.0.4",
    "viem": "^2.16.3"
  }
}
